@{
    Layout = null;
    CEntidades.EN_Curso_Libro cursolibro = new CEntidades.EN_Curso_Libro();
    cursolibro = ViewBag.clibro;
    string librolink;
    librolink = cursolibro.LinkLibro1;
    int cantidaddigitos = cursolibro.LinkLibro1.Length;
}

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">LINKS DE ACCESO</h5>
</div>
<div class="modal-body">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <h3 style="color:red">VÁLIDO HOY, 1 DE Abril</h3>
        <div class="form-group row contenido">
            <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Curso:</label>
            <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                @cursolibro.Curso
            </div>
        </div>
        <div class="form-group row contenido">
            <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Descripcion:</label>
            <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                @cursolibro.Descripcion
            </div>
        </div>
        <div class="form-group row contenido">
            <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Link de clases:</label>
            <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                <a href="@cursolibro.LinkClases" target="_blank">@cursolibro.LinkClases</a>
            </div>
        </div>
        <div class="form-group row contenido">
            <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Libro:</label>
            <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                @cursolibro.Libro
            </div>
        </div>

        @if (cursolibro.LinkLibro1.Substring(0, 1) == "~")
        {
            <div class="form-group row contenido">
                <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Link Libro:</label>
                @{
                    librolink = cursolibro.LinkLibro1.Substring(1, cantidaddigitos - 1);
                }

                <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                    <a href="@Url.Content("/zona-alumnos"+librolink)" target="_blank">@cursolibro.Libro</a>
                </div>
            </div>
        }
        else
        {
            <div class="form-group row contenido">
                <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Link Libro:</label>
                <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                    <a href="@cursolibro.LinkLibro1" target="_blank">@cursolibro.Libro</a>
                </div>
            </div>
        }

        @if (cursolibro.LinkLibro2 != "")
        {
            <div class="form-group row contenido">
                <label for="inputText" class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-form-label"><i class="fa fa-check" aria-hidden="true"></i> Link Recursos:</label>
                <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12">
                    @cursolibro.LinkLibro2
                </div>
            </div>
        }
    </div>
</div>